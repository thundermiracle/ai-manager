{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://thundermiracle.github.io/ai-manager/schemas/mvp-acceptance-contract.schema.json",
  "title": "AI Manager MVP Acceptance and Non-goal Contract",
  "type": "object",
  "required": [
    "version",
    "updatedAt",
    "flows",
    "releaseDecisionPolicy",
    "mustHaveChecklist",
    "doneDefinitions",
    "nonGoals"
  ],
  "properties": {
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "updatedAt": {
      "type": "string",
      "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
    },
    "flows": {
      "type": "array",
      "minItems": 4,
      "maxItems": 4,
      "uniqueItems": true,
      "items": {
        "$ref": "#/$defs/flowName"
      }
    },
    "releaseDecisionPolicy": {
      "type": "object",
      "required": [
        "rule",
        "blockingDefinition",
        "goState",
        "noGoState",
        "requiredEvidence"
      ],
      "properties": {
        "rule": {
          "type": "string",
          "enum": [
            "all_blocking_items_pass"
          ]
        },
        "blockingDefinition": {
          "type": "string",
          "minLength": 1
        },
        "goState": {
          "type": "string",
          "enum": [
            "go"
          ]
        },
        "noGoState": {
          "type": "string",
          "enum": [
            "no_go"
          ]
        },
        "requiredEvidence": {
          "type": "array",
          "minItems": 2,
          "uniqueItems": true,
          "items": {
            "type": "string",
            "enum": [
              "automated_test",
              "manual_qa",
              "spec_review"
            ]
          }
        }
      },
      "additionalProperties": false
    },
    "mustHaveChecklist": {
      "type": "array",
      "minItems": 8,
      "items": {
        "$ref": "#/$defs/checklistItem"
      }
    },
    "doneDefinitions": {
      "type": "array",
      "minItems": 4,
      "maxItems": 4,
      "items": {
        "$ref": "#/$defs/doneDefinition"
      }
    },
    "nonGoals": {
      "type": "array",
      "minItems": 3,
      "items": {
        "$ref": "#/$defs/nonGoal"
      }
    }
  },
  "$defs": {
    "flowName": {
      "type": "string",
      "enum": [
        "detection",
        "list",
        "add",
        "remove"
      ]
    },
    "checklistItem": {
      "type": "object",
      "required": [
        "id",
        "flow",
        "title",
        "description",
        "verification",
        "evidence",
        "blocking"
      ],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^CHK_[A-Z]+_[0-9]{3}$"
        },
        "flow": {
          "$ref": "#/$defs/flowName"
        },
        "title": {
          "type": "string",
          "minLength": 1
        },
        "description": {
          "type": "string",
          "minLength": 1
        },
        "verification": {
          "type": "string",
          "enum": [
            "automated_test",
            "manual_qa",
            "spec_review"
          ]
        },
        "evidence": {
          "type": "string",
          "minLength": 1
        },
        "blocking": {
          "type": "boolean"
        }
      },
      "additionalProperties": false
    },
    "doneDefinition": {
      "type": "object",
      "required": [
        "flow",
        "requiredChecklistItemIds",
        "doneWhen",
        "notDoneWhen"
      ],
      "properties": {
        "flow": {
          "$ref": "#/$defs/flowName"
        },
        "requiredChecklistItemIds": {
          "type": "array",
          "minItems": 2,
          "uniqueItems": true,
          "items": {
            "type": "string",
            "pattern": "^CHK_[A-Z]+_[0-9]{3}$"
          }
        },
        "doneWhen": {
          "type": "array",
          "minItems": 2,
          "items": {
            "type": "string",
            "minLength": 1
          }
        },
        "notDoneWhen": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string",
            "minLength": 1
          }
        }
      },
      "additionalProperties": false
    },
    "nonGoal": {
      "type": "object",
      "required": [
        "id",
        "title",
        "description",
        "deferredToIssues"
      ],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^NG_[0-9]{3}$"
        },
        "title": {
          "type": "string",
          "minLength": 1
        },
        "description": {
          "type": "string",
          "minLength": 1
        },
        "deferredToIssues": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "integer",
            "minimum": 14
          }
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
