{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://thundermiracle.github.io/ai-manager/schemas/support-matrix.schema.json",
  "title": "AI Manager Support Matrix",
  "type": "object",
  "required": [
    "version",
    "updatedAt",
    "resolutionPolicy",
    "clients"
  ],
  "properties": {
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "updatedAt": {
      "type": "string",
      "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
    },
    "resolutionPolicy": {
      "type": "object",
      "required": [
        "precedence",
        "tieBreaker",
        "fallbackStrategy"
      ],
      "properties": {
        "precedence": {
          "type": "string"
        },
        "tieBreaker": {
          "type": "string"
        },
        "fallbackStrategy": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "clients": {
      "type": "array",
      "minItems": 3,
      "items": {
        "type": "object",
        "required": [
          "id",
          "displayName",
          "category",
          "binaryCandidates",
          "configPathCandidates",
          "detectionEvidenceRequirements",
          "assumptions"
        ],
        "properties": {
          "id": {
            "type": "string"
          },
          "displayName": {
            "type": "string"
          },
          "category": {
            "type": "string",
            "enum": [
              "cli",
              "desktop"
            ]
          },
          "binaryCandidates": {
            "type": "array",
            "items": {
              "type": "object",
              "required": [
                "priority",
                "command",
                "role"
              ],
              "properties": {
                "priority": {
                  "type": "integer",
                  "minimum": 1
                },
                "command": {
                  "type": "string"
                },
                "role": {
                  "type": "string",
                  "enum": [
                    "happy_path",
                    "fallback"
                  ]
                }
              },
              "additionalProperties": false
            }
          },
          "configPathCandidates": {
            "type": "array",
            "minItems": 2,
            "items": {
              "type": "object",
              "required": [
                "kind",
                "priority",
                "os",
                "path",
                "role"
              ],
              "properties": {
                "kind": {
                  "type": "string",
                  "enum": [
                    "mcp_config",
                    "skills_dir"
                  ]
                },
                "priority": {
                  "type": "integer",
                  "minimum": 1
                },
                "os": {
                  "type": "array",
                  "minItems": 1,
                  "items": {
                    "type": "string",
                    "enum": [
                      "darwin",
                      "linux",
                      "win32"
                    ]
                  }
                },
                "path": {
                  "type": "string"
                },
                "role": {
                  "type": "string",
                  "enum": [
                    "happy_path",
                    "fallback"
                  ]
                }
              },
              "additionalProperties": false
            }
          },
          "detectionEvidenceRequirements": {
            "type": "array",
            "minItems": 2,
            "items": {
              "type": "string"
            }
          },
          "assumptions": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "string"
            }
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
